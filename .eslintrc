{
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    }
  },
  "extends": ["react-app", "plugin:adonis/typescriptApp"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "plugins": ["babel", "prettier"],
  "rules": {
    "no-unused-expressions": 0,
    "babel/no-unused-expressions": 0,
    "indent": "off",
    "react/jsx-fragments": [1, "element"],
    "prettier/prettier": "error"
  }
}
